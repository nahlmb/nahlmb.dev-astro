        <ul class="flex flex-wrap justify-center items-stretch">
           {articles.reverse().map(post =>
           <li class="w-full md:w-1/2 lg:w-1/3 py-2 md:p-3">
            <a href={post.url} class="bg-gray-200 hover:bg-black hover:text-white bg-opacity-40 p-6 rounded-xl h-full flex flex-col justify-between">
                <div class="mb-4">
                    <h3 class="text-2xl font-bold mb-2">{post.frontmatter.title}</h3>
