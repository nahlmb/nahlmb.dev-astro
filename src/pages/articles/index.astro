        <div class="bg-orange-500 absolute inset-0 -z-50"></div>
        <div class="bg-yellow-300 rounded-full absolute top-0 blur-2xl bg-opacity-50 overflow-hidden"  style="z-index: -10; height: 700px; width:700px; right: -200px"></div>
		<div class=" bg-yellow-500 rounded-full absolute top-48 blur-2xl bg-opacity-50 overflow-hidden"  style="z-index: -10; height: 700px; width:700px; left:-400px"></div>
        <SizeContainer>
            <h1 class="text-center font-bold text-6xl my-20 text-white">ARTICLES!</h1>
            <div class="flex justify-center">
                <div class="block md:flex -mt-2 max-w-3xl">
                    <div class="bg-white text-black hover:bg-black hover:text-white  p-12 rounded-xl mr-0 mb-6 md:mb-0 md:mr-6 flex flex-col justify-between">
                        <div class="mb-4">
                            <h2 class="font-bold text-4xl">Lorem Ipsum Articles</h2>
                            <p class="text-lg mt-3">
