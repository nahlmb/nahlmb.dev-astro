---
import Layout from "./Layout.astro"
import imgReference from '../../src/assets/images/ic_nahl_logo.svg';

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<Layout title={title}>
    <header class="border-b-2 border-b-outline flex items-center justify-center py-3 fixed w-full bg-background" style="z-index: 100000;">
       <a href="/">
            <img src={imgReference} alt="logo" width="35">
       </a>
	</header>
    <main class="pt-16">
        <slot/>
    </main>
    <footer class="border-t text-primary text-opacity-50 text-center p-4 text-sm" style="bottom: 0; left: 0; right: 0;">
		Copyright (c) 2022 Nahl Munif Basalamah, Depok, Indonesia
	</footer>
</Layout>