---
import Layout from "./Layout.astro"

export interface Props {
	title: string;
}

const { title } = Astro.props as Props;
---

<Layout title={title}>
    <header class="border-b-2 border-b-outline flex items-center justify-center py-3 fixed w-full bg-background">
       <a href="/">
            <img src="/public/ic_nahl_logo.svg" alt="logo" width="35">
       </a>
	</header>
    <main class="pt-16">
        <slot/>
    </main>
    <footer class="bg-primary text-background text-center p-4 text-sm" style="bottom: 0; left: 0; right: 0;">
		Copyright (c) 2022 Nahl Munif Basalamah, Depok, Indonesia
	</footer>
</Layout>